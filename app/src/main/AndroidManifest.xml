<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dicoding.mountainapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MountainApp"
        android:fullBackupContent="@xml/backup_descriptor">
        <activity
            android:name="com.diasandfahri.mountainapp.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.MountainApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.diasandfahri.mountainapp.DetailActivity"
            android:exported="true"
            android:theme="@style/Theme.MountainApp.NoActionBar"/>
        <activity
            android:name="com.diasandfahri.mountainapp.MainActivity"
            android:exported="true"/>
    </application>

</manifest>